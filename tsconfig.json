{
  "compilerOptions": {
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "target": "es2019",
    "typeRoots": [
      "types",
      "node_modules/@types",
      "../node_modules/@types"
    ],
    "esModuleInterop": true
  },
  "include": [
    "types",
    "src"
  ],
  "exclude": [
    "**/__tests__"
  ]
}