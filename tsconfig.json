{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": [
      "types",
      "node_modules/@types",
      "../node_modules/@types"
    ],
    "esModuleInterop": true
  },
  "include": [
    "types",
    "src"
  ],
  "exclude": [
    "**/__tests__"
  ]
}